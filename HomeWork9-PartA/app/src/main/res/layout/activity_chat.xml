<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.homework9_parta.HomeScreen">

    <TextView
        android:id="@+id/textViewHI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_below="@+id/addPhoto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <ImageView
        android:id="@+id/addPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/buttonTrips"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:gravity="center"
        android:text="Trips" />

    <Button
        android:id="@+id/buttonDiscoverPoeple"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:text="Discover People"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonTrips"
        android:layout_alignEnd="@+id/buttonTrips" />
</RelativeLayout>
